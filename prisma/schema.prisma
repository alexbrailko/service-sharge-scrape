// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Listing {
  id            String      @id @default(uuid())
  url           String
  type          String
  datePosted    DateTime
  title         String
  listingPrice  Int
  beds          Int?
  baths         Int?
  area          Int?   // square feet
  address       String
  addressFull   String
  postCode      String
  coordinates   String?
  serviceCharge Int
  groundRent    Int?
  pictures      String       @db.LongText
}

